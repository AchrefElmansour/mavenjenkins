pipeline {
    agent any
    tools { 
        maven 'Maven 3.3.3' 
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/nadejeT/mavenjenkins'
            }
        }
        stage('Build') {
            steps {
               bat label: '', script: 'mvn install'
   }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
